<?xml version="1.0" encoding="utf-8"?>
<!--
    GSM-SIP Gateway Default Runtime Permissions

    This file pre-grants runtime permissions for the system app.
    Without this, users would need to manually grant these permissions,
    which doesn't happen since the app runs as a background service.
-->
<exceptions>
    <exception package="com.shreeyash.gateway">
        <!-- Telephony permissions -->
        <permission name="android.permission.READ_PHONE_STATE" fixed="false"/>
        <permission name="android.permission.READ_PHONE_NUMBERS" fixed="false"/>
        <permission name="android.permission.CALL_PHONE" fixed="false"/>
        <permission name="android.permission.ANSWER_PHONE_CALLS" fixed="false"/>
        <permission name="android.permission.READ_CALL_LOG" fixed="false"/>
        <permission name="android.permission.WRITE_CALL_LOG" fixed="false"/>
        <permission name="android.permission.PROCESS_OUTGOING_CALLS" fixed="false"/>

        <!-- Audio permissions -->
        <permission name="android.permission.RECORD_AUDIO" fixed="false"/>

        <!-- Location for SIM detection -->
        <permission name="android.permission.ACCESS_FINE_LOCATION" fixed="false"/>
        <permission name="android.permission.ACCESS_COARSE_LOCATION" fixed="false"/>
    </exception>
</exceptions>
